{
  "name": "usdc-deployment",
  "private": true,
  "scripts": {
    "deploy:proxyadmin": "bash -lc 'source .env && forge script script/DeployProxyAdmin.s.sol --rpc-url $L2_RPC_URL --private-key $DEPLOYER_PRIVATE_KEY --broadcast --verify --verifier $VERIFIER --verifier-url $CHAIN_VERIFICATION_URL'",
    "deploy:signature-checker": "bash -lc 'source .env && forge script script/DeploySignatureChecker.s.sol --rpc-url $L2_RPC_URL --private-key $DEPLOYER_PRIVATE_KEY --broadcast --verify --verifier $VERIFIER --verifier-url $CHAIN_VERIFICATION_URL'",
    "deploy:l2-stack": "bash -lc 'source .env && forge script script/DeployZkSyncOsUSDC.s.sol --rpc-url $L2_RPC_URL --private-key $DEPLOYER_PRIVATE_KEY --libraries lib/stablecoin-evm/contracts/util/SignatureChecker.sol:SignatureChecker:$SIGNATURE_CHECKER_ADDRESS --broadcast --verify --verifier $VERIFIER --verifier-url $CHAIN_VERIFICATION_URL'",
    "register:l1": "bash -lc 'source .env && forge script script/InitializeL1UsdcBridge.s.sol --rpc-url $L1_RPC_URL --private-key $L1_USDC_BRIDGE_OWNER_PRIVATE_KEY --broadcast'",
    "bridge:eth": "bash -lc 'source .env && FOUNDRY_NO_LINT=1 forge script script/BridgeUsdcToEthChain.s.sol --rpc-url $L1_RPC_URL --private-key $DEPLOYER_PRIVATE_KEY --broadcast'",
    "bridge:cbt": "bash -lc 'source .env && FOUNDRY_NO_LINT=1 forge script script/BridgeUsdcToCbtBaseChain.s.sol --rpc-url $L1_RPC_URL --private-key $DEPLOYER_PRIVATE_KEY --broadcast'"
  }
}
